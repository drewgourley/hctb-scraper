{
  "name": "hctb-scraper",
  "private": true,
  "version": "1.1.0",
  "description": "A Scraper for Here Comes The Bus",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "build": "tsc -b --clean && tsc -b .",
    "watch": "tsc -b --clean && tsc -b . --watch",
    "nodemon": "nodemon --watch ./dist --exec node ./dist/index.js",
    "dev": "concurrently --kill-others \"npm run watch\" \"npm run nodemon\"",
    "start": "node ./dist/index.js"
  },
  "dependencies": {
    "cheerio": "1.0.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.17.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.2"
  }
}
