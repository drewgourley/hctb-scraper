{
  "name": "hctb-scraper",
  "private": true,
  "version": "2025.08.27.3",
  "description": "A Scraper for Here Comes The Bus",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "build": "tsc -b --clean && tsc -b .",
    "watch": "tsc -b . --watch",
    "nodemon": "nodemon --watch ./dist --exec node --env-file=./.env ./dist/index.js",
    "dev": "npm run build && concurrently --kill-others \"npm run watch\" \"npm run nodemon\"",
    "start": "node ./dist/index.js"
  },
  "dependencies": {
    "@types/node": "^24.3.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "node-html-parser": "^7.0.1",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10"
  }
}
